<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/linear_h"
    android:padding="10dp"
    android:background="@drawable/background_all"
    >
    <LinearLayout
        style="@style/linear_v"
        android:orientation="vertical"
        android:layout_width="312dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/playfairdisplay_italic"
                style="@style/tv_noidung"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="ID" />
            <TextView
                android:id="@+id/tvMaNV"
                style="@style/tv_noidung"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/playfairdisplay_italic"
                style="@style/tv_noidung"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Họ tên" />
            <TextView
                android:id="@+id/tvHoTen"
                style="@style/tv_noidung"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/playfairdisplay_italic"
                style="@style/tv_noidung"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Ngày chấm công" />
            <TextView
                android:id="@+id/tvNgayChamCong"
                style="@style/tv_noidung"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/playfairdisplay_italic"
                style="@style/tv_noidung"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Số công" />
            <TextView
                android:id="@+id/tvSoNgayCong"
                style="@style/tv_noidung"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:layout_marginTop="20dp"
            android:id="@+id/btnXoa"
            style="@style/button_model_view"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/delete"
            />
        <ImageButton
            android:id="@+id/btnSua"
            style="@style/button_model_view"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edit"
            />
    </LinearLayout>

</LinearLayout>